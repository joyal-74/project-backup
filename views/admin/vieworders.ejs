            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-9 px-md-4 py-4 mx-auto">
                <h1 class="h3 mb-4">View Order</h1>

                <!-- Order Details -->
                <div class="row">
                    <!-- Order Summary -->
                    <div class="col-md-8">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="card-title mb-0">Order Summary</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <p><strong>Order ID:</strong> #12345</p>
                                        <p><strong>Order Date:</strong> 2023-10-01</p>
                                        <p><strong>Customer:</strong> John Doe</p>
                                    </div>
                                    <div class="col-md-6">
                                        <p><strong>Status:</strong> <span class="badge bg-success">Completed</span></p>
                                        <p><strong>Total Amount:</strong> ₹1,200</p>
                                        <p><strong>Payment Method:</strong> Credit Card</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Product Details -->
                        <div class="card mb-4">
                            <div class="card-body p-0 m-0">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Product</th>
                                                <th>Quantity</th>
                                                <th>Price</th>
                                                <th>Total</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>Running Shoes</td>
                                                <td>1</td>
                                                <td>₹1,000</td>
                                                <td>₹1,000</td>
                                            </tr>
                                            <tr>
                                                <td>Sports T-Shirt</td>
                                                <td>2</td>
                                                <td>₹100</td>
                                                <td>₹200</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Order Timeline -->
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">Order Timeline</h5>
                            </div>
                            <div class="card-body">
                                <div class="timeline">
                                    <div class="timeline-item">
                                        <p class="mb-1"><strong>Order Placed</strong></p>
                                        <p class="text-muted mb-0">2023-10-01 10:00 AM</p>
                                    </div>
                                    <div class="timeline-item">
                                        <p class="mb-1"><strong>Order Confirmed</strong></p>
                                        <p class="text-muted mb-0">2023-10-01 10:30 AM</p>
                                    </div>
                                    <div class="timeline-item">
                                        <p class="mb-1"><strong>Order Shipped</strong></p>
                                        <p class="text-muted mb-0">2023-10-02 09:00 AM</p>
                                    </div>
                                    <div class="timeline-item">
                                        <p class="mb-1"><strong>Order Delivered</strong></p>
                                        <p class="text-muted mb-0">2023-10-03 03:00 PM</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
