            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-9 px-md-4 py-4 mx-auto">
                <h1 class="h3 mb-4">Products</h1>

                <!-- Filters and Add Product Button -->
                <div class="d-flex flex-wrap align-items-center justify-content-between gap-3 mb-4">
                    <!-- Filter by Category -->
                    <div class="d-flex gap-2">
                        <div class="flex-grow-1" style="max-width: 180px;">
                            <select class="form-select">
                                <option selected disabled hidden>Filter by Category</option>
                                <option value="1">Gym Equipment</option>
                                <option value="2">Sports Gear</option>
                                <option value="3">Yoga & Meditation</option>
                            </select>
                        </div>

                        <!-- Filter by Stock -->
                        <div class="flex-grow-1" style="max-width: 180px;">
                            <select class="form-select">
                                <option selected disabled hidden>Filter by Stock</option>
                                <option value="1">In Stock</option>
                                <option value="2">Out of Stock</option>
                            </select>
                        </div>
                    </div>

                    <!-- Search Bar -->
                    <form class="d-flex search-container flex-grow-1" style="max-width: 300px;">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn" type="submit" style="background-color: #3e29a8;">
                            <i class="fas fa-search text-white"></i>
                        </button>
                    </form>

                    <!-- Add Product Button -->
                    <div class="text-end">
                        <a class="btn add-product-btn" href="/admin/addProducts">
                            <i class="fas fa-plus me-2"></i>Add Product
                        </a>
                    </div>
                </div>


                <!-- Products Table -->
                <div class="card">
                    <div class="card-body p-0 m-0">
                        <div class="table-responsive">
                            <table class="table table-hover text-center">
                                <thead>
                                    <tr>
                                        <th>Product ID</th>
                                        <th>Name</th>
                                        <th>Category</th>
                                        <th>Price</th>
                                        <th>Stock</th>
                                        <th>Added On</th>
                                        <th>Staus</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
